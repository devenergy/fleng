{
  "http": {
    "hostname": "localhost",
    "port": 7654
  },

  "database": {
    "hostname": "localhost",
    "port": 27017,
    "name": "fleng",
    "debug": false
  },

  "socket.io": {
    "path": "/socket.io",
    "serveClient": false
  },

  "scheduler": {
    "prefix": "fleng:jobs",
    "jobsDirectory": "jobs",
    "defaultConcurency": 1
  },

  "middleware": {
    "favicon": {
      "path": null
    },

    "assets": {
      "bundle": false,
      "compress": false,
      "servePath": "assets",
      "paths": null
    },

    "session": {
      "cookie": "fleng.sid",
      "maxAge": 1209600000,
      "secret": "fleng session secret"
    },

    "static": {
      "paths": [
        "public"
      ]
    },

    "morgan": {}
  }
}
